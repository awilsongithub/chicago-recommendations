<h3>Create a Recommendation</h3>

<!-- form will call /create . "points to route on server" -->
<!-- post sends off data. stuff entered is bound to the name attr. value -->
<form action="/create" method="post">
   <!-- name attribute bind. ... params.type_of_place for example to reference -->
   <input type="text" name="name" value="" placeholder="Name of place">
   <input type="text" name="type_of_place" value="" placeholder="Type of place">
   <input type="text" name="contributor" value="" placeholder="Please enter your name">
   <input type="text" name="notes" value="" placeholder="Any notes?">
   <input type="submit" name="name" value="Add an item!">
</form>
